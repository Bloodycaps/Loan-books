<%- include('../partials/header'); -%> 
<%- include('../partials/nav'); -%>

<div class="ml-5 mr-5">
  <section>
    <div class="d-flex bd-highlight mb-3">
      <div class="m-2 ml-auto">
        <a href="/autores/new" class="btn btn-success"
          ><i class="fas fa-user-plus"></i> Nuevo Autor</a
        >
      </div>
    </div>
  </section>
  <table class="table table-sm text-center">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Nacionalidad</th>
        <th scope="col">Opciones</th>
      </tr>
    </thead>

    <% for( let i = 0; i < autores.length; i++ ) { %>
    <tbody>
      <tr>
        <td><%= autores[i].nombre %></td>
        <td><%= autores[i].nacionalidad %></td>
        <td>
          <a
            class="btn btn-primary"
            href="/autores/edit/<%= autores[i].idautor %>"
          >
            <i class="fas fa-pen"></i>
            Editar
          </a>
          <a
            class="btn btn-danger"
            href="/autores/delete/<%= autores[i].idautor %>"
          >
            <i class="fas fa-trash-alt"></i>
            Eliminar
          </a>
        </td>
      </tr>
    </tbody>
    <% } %>
  </table>
</div>

<%- include('../partials/footer'); -%>
